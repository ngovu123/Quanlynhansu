@model Quanlynhansu.Models.HOPDONG

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
   
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    

    <div class="form-group">
        <label class="control-label col-md-2">Tên nhân viên:</label>
        <div class="col-md-10">
            @Html.DropDownList("MANV", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.MANV, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Loại hợp đồng:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.LOAIHD, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LOAIHD, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Từ ngày:</label>
        <div class="col-md-10">
            <input type="date" name="TUNGAY" required />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Đến ngày:</label>
        <div class="col-md-10">
            <input type="date" name="DENNGAY" required />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Thời gian làm việc:</label>
        <div class="col-md-10">
            <input type="date" name="TGLV" required />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Ngày ký:</label>
        <div class="col-md-10">
            <input type="date" name="NGAYSINH" required />
        </div>
    </div>



    <div class="form-group">
        <label class="control-label col-md-2">Hệ số lương:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.HESOLUONG, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HESOLUONG, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Lương cơ bản:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.LUONGCB, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.LUONGCB, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Phụ cấp:</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.PHUCAP, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.PHUCAP, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
