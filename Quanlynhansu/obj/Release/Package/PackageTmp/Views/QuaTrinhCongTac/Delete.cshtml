@model Quanlynhansu.Models.QUATRINHCONGTAC

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">

    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Xoá phòng ban</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="inputName"> Mã QTCT</label>
                <input type="text" id="inputName" class="form-control" value="@Html.DisplayFor(model => model.MANV)">
            </div>
            <div class="form-group">
                <label for="inputName"> Nhân viên</label>
                <input type="text" id="inputName" class="form-control" value="@Html.DisplayFor(model => model.NHANVIEN.HOTEN)">
            </div>
            <div class="form-group">
                <label for="inputName"> Ngày bắt đầu</label>
                <input type="text" id="inputName" class="form-control" value="@Html.DisplayFor(model => model.NGAYBD)">
            </div>
            <div class="form-group">
                <label for="inputName"> Ngày kết thúc</label>
                <input type="text" id="inputName" class="form-control" value="@Html.DisplayFor(model => model.NGAYKT)">
            </div>
            <div class="form-group">
                <label for="inputName"> Nơi công tác</label>
                <input type="text" id="inputName" class="form-control" value="@Html.DisplayFor(model => model.NOICT)">
            </div>
            <div class="form-group">
                <label for="inputName"> Chức vụ</label>
                <input type="text" id="inputName" class="form-control" value="@Html.DisplayFor(model => model.CHUCVU)">
            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

    <div class="row form-group">
        <div class="col-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <a href="@Url.Action("Index","PhongBan")" class="btn btn-secondary">Cancel</a>
                    <input type="submit" value="Delete" class="btn btn-success float-right">
                </div>
            }

        </div>
    </div>
</section>