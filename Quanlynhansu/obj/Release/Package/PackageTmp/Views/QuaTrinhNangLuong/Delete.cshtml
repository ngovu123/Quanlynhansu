@model Quanlynhansu.Models.QUATRINHLENLUONG

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">

    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Chi tiết</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="card-body">
                <div class="form-group">
                    <label for="inputName"> Mã quyết định</label>
                    <input type="text" id="inputName" class="form-control" value="@Html.DisplayFor(model => model.MAQD)" readonly>
                </div>
                <div class="form-group">
                    <label for="inputName"> Mã hợp đồng</label>
                    <input type="text" id="inputName" class="form-control" value="@Html.DisplayFor(model => model.MAHD)" readonly>
                </div>
                <div class="form-group">
                    <label for="inputName">Tên nhân viên</label>
                    <input type="text" id="inputName" class="form-control" value="@Html.DisplayFor(model => model.HOPDONG.NHANVIEN.HOTEN)" readonly>
                </div>
                <div class="form-group">
                    <label for="inputName">Hệ số lương cũ</label>
                    <input type="text" id="inputName" class="form-control" value="@Html.DisplayFor(model => model.HESOLUONG_HIENTAI)" readonly>
                </div>
                <div class="form-group">
                    <label for="inputName">Hệ số lương mới</label>
                    <input type="text" id="inputName" class="form-control" value="@Html.DisplayFor(model => model.HESOLUONG_MOI)" readonly>
                </div>
                <div class="form-group">
                    <label for="inputName">Ngày ký</label>
                    <input type="text" id="inputName" class="form-control" value="@Html.DisplayFor(model => model.NGAYKY)" readonly>
                </div>
                <div class="form-group">
                    <label for="inputName">Ngày lên lương</label>
                    <input type="text" id="inputName" class="form-control" value="@Html.DisplayFor(model => model.NGAYLENLUONG)" readonly>
                </div>
                <div class="form-group">
                    <label for="inputName">Loại hợp đồng</label>
                    <input type="text" id="inputName" class="form-control" value="@Html.DisplayFor(model => model.HOPDONG.LOAIHD)" readonly>
                </div>



            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <div class="row form-group">
        <div class="col-12">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <a href="@Url.Action("Index","QuaTrinhNangLuong")" class="btn btn-secondary">Cancel</a>
                    <input type="submit" value="Delete" class="btn btn-success float-right">
                </div>
            }

        </div>
    </div>
</section>