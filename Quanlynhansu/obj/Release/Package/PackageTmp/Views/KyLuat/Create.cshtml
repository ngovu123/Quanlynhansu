
@model Quanlynhansu.Models.KYLUAT

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal content">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Thêm Kỷ luật</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="card-body form-group">
                <div class="form-group">
                    <label for="inputName"> Nhân viên khen thưởng</label>
                    @Html.DropDownList("MANV", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.MANV, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="inputName">Ngày kỷ luật</label>
                    @Html.EditorFor(model => model.NGAYKL, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NGAYKL, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="inputName"> Hình thức kỷ luật</label>
                    @Html.EditorFor(model => model.HINHTHUCKL, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HINHTHUCKL, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="inputName"> Loại kỷ luật</label>
                    @Html.EditorFor(model => model.LOAI, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LOAI, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="inputName">Lý do kỷ luật</label>
                    @Html.EditorFor(model => model.LYDOKL, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LYDOKL, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="inputName"> Nội dung kỷ luật</label>
                    @Html.EditorFor(model => model.NOIDUNG, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NOIDUNG, "", new { @class = "text-danger" })
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->


        <div class="row form-group">
            <div class="col-12">
                <a href="@Url.Action("Index","PhongBan")" class="btn btn-secondary">Cancel</a>
                <input type="submit" value="Save" class="btn btn-success float-right">
            </div>

        </div>


    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
