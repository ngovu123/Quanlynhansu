@model Quanlynhansu.Models.THOIVIEC

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal content">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Chỉnh sửa</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MANVIEC)
            <div class="form-group d-flex justify-content-center align-items-center" style="height:100px;">
                <h4><b>@Model.NHANVIEN.HOTEN</b></h4>
            </div>
            <div class="card-body form-group">
                <div class="form-group">
                    <label for="inputName"> Ngày Nộp đơn:</label>
                    <input type="datetime" class="form-control" name="NGAYNOPDON" required value="@String.Format("{0:dd/MM/yyyy}", Model.NGAYNOPDON)" />
                </div>
                <div class="form-group">
                    <label for="inputName"> Ngày thôi việc:</label>
                    <input type="datetime" class="form-control" name="NGAYTV" required value="@String.Format("{0:dd/MM/yyyy}", Model.NGAYTV)" />
                </div>
                <div class="form-group">
                    <label for="inputName"> Chức vụ:</label>
                    @Html.EditorFor(model => model.NHANVIEN.CHUCVU.TENCV, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NHANVIEN.CHUCVU.TENCV, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="inputName"> Lý do:</label>
                    @Html.EditorFor(model => model.LYDOTV, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LYDOTV, "", new { @class = "text-danger" })
                </div>
            </div>

            

           
               

            
            <!-- /.card-body -->
        </div>
        <!-- /.card -->


        <div class="row form-group">
            <div class="col-12">
                <a href="@Url.Action("Index","ThoiViecs")" class="btn btn-secondary">Cancel</a>
                <input type="submit" value="Save" class="btn btn-success float-right">
            </div>

        </div>


    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


