@model Quanlynhansu.Models.BANGCONG

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal content">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Chỉnh sửa</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MAC)
            <div class="card-body form-group">
                <div class="form-group">
                    <label>TÊN NHÂN VIÊN</label>
                    <div class="col-md-10">
                        <input type="text" class="form-control" value="@Model.NHANVIEN.HOTEN" readonly />
                        <input type="hidden" class="form-control" name="MANV" value="@Model.MANV" readonly />
                    </div>
                </div>

                <div class="form-group">
                    <label>CÔNG CHỦ NHẬT</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CONGCN, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CONGCN, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label>CÔNG LỄ</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CONGLE, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CONGLE, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label>CÔNG THƯỜNG</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.CONGTHUONG, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CONGTHUONG, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label>NGHỈ CÓ PHÉP</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NGHICP, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NGHICP, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label>NGHỈ KHÔNG PHÉP</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NGHIKP, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NGHIKP, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="form-group">
                    <label>TỔNG NGÀY CÔNG</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TONGC, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TONGC, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label>THÁNG</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.THANG, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.THANG, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label>NĂM</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NAM, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NAM, "", new { @class = "text-danger" })
                    </div>
                </div>


            </div>
        </div>
        <!-- /.card -->


        <div class="row form-group">
            <div class="col-12">
                <a href="@Url.Action("Index","BangCong")" class="btn btn-secondary">Cancel</a>
                <input type="submit" value="Save" class="btn btn-success float-right">
            </div>

        </div>


    </div>
}

