@using System.Data.Entity;
@model IEnumerable<Quanlynhansu.Models.TaiKhoan>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-6">

                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Chi tiết</h3>

                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        @*<div class="form-group">
                            <label for="inputName"> Mã nhân viên: </label>&nbsp;&nbsp;<span>@Html.DisplayFor(model => item.NHANVIEN.MANV)</span>
                        </div>*@
                        <div class="form-group">
                            <label for="inputName"> Họ tên nhân viên: </label>&nbsp;&nbsp;<span> @Html.DisplayFor(modelItem => item.NHANVIEN.HOTEN)</span>

                        </div>
                        <div class="form-group">
                            <label for="inputName"> Hình Ảnh: </label>&nbsp;&nbsp;<span> <img src="~/Image/@item.NHANVIEN.HINHANH" style="width: 80px; height: 100px" /></span>

                        </div>
                        <div class="form-group">
                            <label for="inputName"> Giới tính: </label>&nbsp;&nbsp;<span>@Html.DisplayFor(model => item.NHANVIEN.GIOITINH)</span>

                        </div>
                        <div class="form-group">
                            <label for="inputName"> Ngày sinh: </label>&nbsp;&nbsp;<span>@Html.FormatValue(item.NHANVIEN.NGAYSINH, "{0:dd/MM/yyyy}")</span>

                        </div>
                        <div class="form-group">
                            <label for="inputName"> CCCD </label>&nbsp;&nbsp;<span>@Html.DisplayFor(model => item.NHANVIEN.CCCD)</span>

                        </div>
                        <div class="form-group">
                            <label for="inputName"> Địa chỉ: </label>&nbsp;&nbsp;<span>@Html.DisplayFor(model => item.NHANVIEN.DIACHI)</span>

                        </div>
                        <div class="form-group">
                            <label for="inputName"> Email: </label>&nbsp;&nbsp;<span>@Html.DisplayFor(model => item.Email)</span>
                        </div>
                    </div>

                    <!-- /.card-body -->
                </div>
            </div>
            <div class="col-md-6">
                <div class="card ">
                    <div class="card-header">
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body ">

                        <div class="form-group">
                            <label for="inputName"> Điện thoại: </label>&nbsp;&nbsp;<span>@Html.DisplayFor(model => item.NHANVIEN.DIENTHOAI)</span>
                        </div>
                        <div class="form-group">
                            <label for="inputName"> giới tính: </label>&nbsp;&nbsp;<span>@Html.DisplayFor(model => item.NHANVIEN.GIOITINH)</span>

                        </div>
                        <div class="form-group">
                            <label for="inputName"> Bộ phận: </label>&nbsp;&nbsp;<span>@Html.DisplayFor(model => item.NHANVIEN.BOPHAN.TENBP)</span>
                        </div>
                        <div class="form-group">
                            <label for="inputName"> Chức vụ: </label>&nbsp;&nbsp;<span>@Html.DisplayFor(model => item.NHANVIEN.CHUCVU.TENCV)</span>

                        </div>
                        <div class="form-group">
                            <label for="inputName"> Dân tộc: </label>&nbsp;&nbsp;<span> @Html.DisplayFor(model => item.NHANVIEN.DANTOC.TENDT)</span>

                        </div>
                        <div class="form-group">
                            <label for="inputName"> Phong ban: </label>&nbsp;&nbsp;<span>@Html.DisplayFor(model => item.NHANVIEN.PHONGBAN.TENPB)</span>

                        </div>
                        <div class="form-group">
                            <label for="inputName"> Tôn giáo: </label>&nbsp;&nbsp;<span>@Html.DisplayFor(model => item.NHANVIEN.TONGIAO.TENTG)</span>

                        </div>
                        <div class="form-group">
                            <label for="inputName"> Trình độ: </label>&nbsp;&nbsp;<span>@Html.DisplayFor(model => item.NHANVIEN.TRINHDO.TENTD)</span>

                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </div>
        }


    </div>
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Bản chi tiết ngày công</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body" style="overflow-y: hidden; overflow-x: auto;">
            <div class="card-body p-0">
                <table class="table table-striped projects">
                    <thead>
                        <tr>
                            <th style="width: 300px">
                                NHÂN VIÊN
                            </th>
                            <th style="width: 150px">
                                CÔNG CN
                            </th>
                            <th style="width: 100px">
                                CÔNG LỄ
                            </th>
                            <th style="width: 100px">
                                CÔNG THƯỜNG
                            </th>
                            <th style="width: 100px">
                                NGHĨ CÓ PHÉP
                            </th>
                            <th style="width: 100px">
                                NGHĨ K.PHÉP
                            </th>
                            <th style="width: 100px">
                                TỔNG NGÀY CÔNG
                            </th>

                            <th style="width: 100px">
                                HỆ SỐ LƯƠNG
                            </th>
                            <th style="width: 100px">
                                LƯƠNG CƠ BẢN
                            </th>
                            <th style="width: 100px">
                                PHỤ CẤP
                            </th>
                            <th style="width: 100px">
                                TỪ LƯƠNG
                            </th>
                            <th style="width: 100px">
                                TIỀN THƯỞNG
                            </th>
                            <th style="width: 100px">
                                TIỀN PHẠT
                            </th>
                            <th style="width: 100px">
                                TỔNG LÃNH
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                           
                            @{ Quanlynhansu.Models.QLNSEntities db = new Quanlynhansu.Models.QLNSEntities();
                                var luong = db.LUONG1.Include(x => x.NHANVIEN).ToList();
                                var cong = db.BANGCONGs.Include(x => x.NHANVIEN).ToList();
                                foreach (var ite in cong.Where(x => x.MANV == int.Parse(Session["id"].ToString())))
                                {
                                    <td>
                                        @Html.DisplayFor(modelItem => ite.NHANVIEN.HOTEN)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => ite.CONGCN)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => ite.CONGLE)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => ite.CONGTHUONG)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => ite.NGHICP)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => ite.NGHIKP)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => ite.TONGC)

                                    </td>
                                    break;
                                }
                                foreach (var ite in luong.Where(x => x.MANV == int.Parse(Session["id"].ToString())))
                                {
                                    <td>
                                        @Html.DisplayFor(modelItem => ite.HSL)
                                    </td>
                                    <td>
                                        @string.Format("{0:#,##0,0}", ite.LUONGCB)
                                    </td>
                                    <td>
                                        @string.Format("{0:#,##0,0}", ite.PHUCAP)
                                    </td>
                                    <td>
                                        @string.Format("{0:#,##0,0}", ite.TULUONG)
                                    </td>
                                    <td>
                                        @string.Format("{0:#,##0,0}", ite.TIENKB)
                                    </td>
                                    <td>
                                        @string.Format("{0:#,##0,0}", ite.TTIENKL)
                                    </td>
                                    <td>
                                        @string.Format("{0:#,##0,0}", ite.TONGLANH)
                                    </td>
                                    break;
                                }

                            }
                        </tr>

                    </tbody>

                </table>
                @*<div class="card-footer clearfix">
                        <ul class="pagination pagination-sm m-0">
                            <li class="page-item">@Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))</li>
                        </ul>
                    </div>*@

            </div>

        </div>

        <!-- /.card-body -->
    </div>
</section>


