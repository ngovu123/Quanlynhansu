@model Quanlynhansu.Models.NHANVIEN

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "HoSoTD", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal content">
        <div class="card card-primary">
            <div class="card-header">


                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="card-body form-group">
            @{
                Quanlynhansu.Models.QLNSEntities db = new Quanlynhansu.Models.QLNSEntities();
                var nn = db.HOSOTDs.ToList();
                foreach (var i in nn.Where(x => x.MAHS == @ViewBag.MAHS))
                {
                    <div class="form-group">

                        <label for="inputName"> Tên nhân viên</label>
                        <input value="@i.HOTEN" name="HOTEN" class="form-control" />
                    </div>

                    <label class="control-label col-md-2">Ảnh bìa:</label>
                    <div class="col-md-10">
                        <input type="file" name="file_upload" />
                        @ViewBag.thongbao
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Ngày sinh:</label>
                        <div class="col-md-10">
                            <input type="date"  name="NGAYSINH" required />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2"><b>Dân tộc:</b></label>
                        <input value="@i.DANTOC.TENDT" name="TENDT" class="form-control" />
                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-2"><b>CCCD:</b></label>
                        <input value="@i.CCCD" name="CCCD" class="form-control" />
                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-2"><b>Địa chỉ:</b></label>
                        @Html.EditorFor(model => model.DIACHI, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DIACHI, "", new { @class = "text-danger" })
                    </div>



                    <div class="form-group">
                        <label class="control-label col-md-2"><b>Giới tính:</b></label>
                        <input value="@i.GIOITINH" name="GIOITINH" class="form-control" />
                    </div>



                    <div class="form-group">
                        <label class="control-label col-md-2"><b>Điện thoại:</b></label>
                        <input value="@i.SDT" name="SDT" class="form-control" />
                    </div>



                    <div class="form-group">
                        <label class="control-label col-md-2"><b>Phòng ban:</b></label>
                        @Html.DropDownList("MAPB", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MAPB, "", new { @class = "text-danger" })
                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-2"><b>Bộ phận:</b></label>
                        @Html.DropDownList("MABP", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MABP, "", new { @class = "text-danger" })
                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-2"><b>Chức vụ:</b></label>
                        @Html.DropDownList("MACV", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MACV, "", new { @class = "text-danger" })
                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-2"><b>Học vấn:</b></label>
                        <input value="@i.TRINHDO.TENTD" name="TENTD" class="form-control" />
                    </div>


                    <div class="form-group">
                        <label class="control-label col-md-2"><b>Tôn giáo:</b></label>
                        <input value="@i.TONGIAO.TENTG" name="TENTG" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Loại hợp đồng:</label>
                        <div class="col-md-10">
                            <input value="" name="LOAIHD" class="form-control" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Từ ngày:</label>
                        <div class="col-md-10">
                            <input type="date" name="TUNGAY" required />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Đến ngày:</label>
                        <div class="col-md-10">
                            <input type="date" name="DENNGAY" required />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Thời gian làm việc:</label>
                        <div class="col-md-10">
                            <input type="date" name="TGLV" required />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Ngày ký:</label>
                        <div class="col-md-10">
                            <input type="date" name="NGAYKY" required />
                        </div>
                    </div>



                    <div class="form-group">
                        <label class="control-label col-md-2">Hệ số lương:</label>
                        <div class="col-md-10">
                            <input value="" name="HESOLUONG" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Lương cơ bản:</label>
                        <div class="col-md-10">
                            <input value="" name="LUONGCB" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Phụ cấp:</label>
                        <div class="col-md-10">
                            <input value="" name="PHUCAP" class="form-control" />
                        </div>
                    </div>
                }
            }
        </div>

        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->


    <div class="row form-group">
        <div class="col-12">
            <a href="@Url.Action("Index","Kq")" class="btn btn-secondary">Cancel</a>
            <input type="submit" value="Save" class="btn btn-success float-right">
        </div>

    </div>

}

