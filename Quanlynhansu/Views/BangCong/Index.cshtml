@model IEnumerable<Quanlynhansu.Models.BANGCONG>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    function toggle(source) {
        var checkboxes = document.querySelectorAll('input[type="checkbox"]');
        for (var i = 0; i < checkboxes.length; i++) {
            if (checkboxes[i] != source)
                checkboxes[i].checked = source.checked;
        }
    }
</script>

<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            @using (Html.BeginForm("Index", "BangCong", FormMethod.Post, new { @class = "" }))
            {
                <div class="d-flex" style="width:500px">
                    @Html.DropDownList("thang", null, htmlAttributes: new { @class = "form-control" })
                    @Html.DropDownList("nam", null, htmlAttributes: new { @class = "form-control" })
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-default">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            }

            <div class="card-tools float-right" style="margin-right:0px">
                <button type="button" class="btn btn-tool col-md-2" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0" style="overflow-y: hidden; overflow-x: auto;">
            <table class="table table-striped projects" id="example1">
                <thead>
                    <tr>
                        <th><input type="checkbox" onclick="toggle(this);" /></th>
                        <th>TÊN NHÂN VIÊN</th>
                        <th style="text-align: center">CÔNG CN</th>
                        <th style="text-align: center">CÔNG LỄ</th>
                        <th style="text-align: center">CÔNG THƯỜNG</th>
                        <th style="text-align: center">NGHĨ C.PHÉP</th>
                        <th style="text-align: center">NGHĨ K. PHÉP</th>
                        <th style="text-align: center">TỔNG NGÀY CÔNG</th>
                        <th style="text-align: center">Tháng</th>
                        <th style="text-align: center">Năm</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td><input type="checkbox" /></td>
                            <td>@Html.DisplayFor(modelItem => item.NHANVIEN.HOTEN)</td>
                            <td style="text-align: center">@Html.DisplayFor(modelItem => item.CONGCN)</td>
                            <td style="text-align: center">@Html.DisplayFor(modelItem => item.CONGLE)</td>
                            <td style="text-align: center">@Html.DisplayFor(modelItem => item.CONGTHUONG)</td>
                            <td style="text-align: center">@Html.DisplayFor(modelItem => item.NGHICP)</td>
                            <td style="text-align: center">@Html.DisplayFor(modelItem => item.NGHIKP)</td>
                            <td style="text-align: center">@Html.DisplayFor(modelItem => item.TONGC)</td>
                            <td style="text-align: center">@Html.DisplayFor(modelItem => item.THANG)</td>
                            <td style="text-align: center">@Html.DisplayFor(modelItem => item.NAM)</td>
                            <td class="text-right py-0 align-middle">
                                <div class="btn-group btn-group-sm">
                                    <a href="@Url.Action("Edit", new { id = item.MAC })" class="btn btn-primary"><i class="fas fa-pencil-alt"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div style="height:30px">
        <a href="@Url.Action("Tinh", new { thang = ViewBag.t, nam = ViewBag.n })" class="btn-success" style="padding:5px;border-radius:10%;">Tính</a>
    </div>
</section>
