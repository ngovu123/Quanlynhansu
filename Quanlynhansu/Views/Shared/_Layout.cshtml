    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/datatables.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/sb-admin.css" rel="stylesheet" type="text/css" />
    <script src="~/ckeditor/ckeditor.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style type="text/css">
        .edit-row {
            margin-left: 0px;
            margin-right: 80px;
            /* padding: 10px;*/
            height: 100%;
        }

        .active {
            background: #0B0B0B;
            color: red;
        }
    </style>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
    @if (Session["Admin"] == null)
    {
        Response.Redirect("/User/Login");
    }
    <div class="wrapper">

        <!-- Preloader -->
        <div class="preloader flex-column justify-content-center align-items-center">

        </div>

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>

            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Navbar Search -->
                <li class="nav-item">
                    <a class="nav-link" data-widget="navbar-search" href="#" role="button">
                        <i class="fas fa-search"></i>
                    </a>
                    <div class="navbar-search-block">
                        <form class="form-inline">
                            <div class="input-group input-group-sm">
                                <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                                <div class="input-group-append">
                                    <button class="btn btn-navbar" type="submit">
                                        <i class="fas fa-search"></i>
                                    </button>
                                    <button class="btn btn-navbar" type="button" data-widget="navbar-search">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </li>

                <!-- Messages Dropdown Menu -->

                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>

            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="@Url.Action("Index","Thongke")" class="brand-link">
                <img src="~/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">QUẢN LÝ NHÂN SỰ</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                @{ string name = ""; string hinh = " "; string manv = "";}
                <!-- Sidebar user panel (optional) -->
                @if (Session["Admin"] != null)
                {
                    name = ((Quanlynhansu.Models.TaiKhoan)Session["Admin"]).NHANVIEN.HOTEN.ToString();
                    hinh = ((Quanlynhansu.Models.TaiKhoan)Session["Admin"]).NHANVIEN.HINHANH.ToString();
                    manv = ((Quanlynhansu.Models.TaiKhoan)Session["Admin"]).NHANVIEN.MANV.ToString();
                }

                <div class="mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/Image/@hinh" class="img-circle" alt="User Image" style="width:3.1rem;height:3.3rem">
                    </div>
                    &nbsp;
                    <div class="info">
                        <a style="margin-top:10%;" href="#" class="d-block">@name</a>
                    </div>
                </div>


                <!-- SidebarSearch Form -->
                <div class="form-inline">
                    <div class="input-group" data-widget="sidebar-search">
                        <input class="form-control form-control-sidebar" type="search" placeholder="Search" aria-label="Search">
                        <div class="input-group-append">
                            <button class="btn btn-sidebar">
                                <i class="fas fa-search fa-fw"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- Add icons to the links using the .nav-icon class
                        with font-awesome or any other icon font library -->

                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-folder"></i>

                                <p>
                                    TUYỂN DỤNG
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","HoSoTD")" class="nav-link">
                                        <i class="nav-icon fas fa-user-friends"></i>
                                        <p>
                                            Hồ sơ ứng tuyển
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("kq","HoSoTD")" class="nav-link">
                                        <i class="fas fa-book nav-icon"></i>
                                        <p>
                                            Kết quả tuyển dụng
                                        </p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","VTTD")" class="nav-link">
                                        <i class="fas fa-book nav-icon"></i>
                                        <p>
                                            Vị trí tuyển dụng
                                        </p>
                                    </a>
                                </li>

                            </ul>
                        </li>

                        <li class="nav-header">QUẢN LÝ</li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-folder"></i>

                                <p>
                                    Danh mục chung
                                    <i class="fas fa-angle-left right"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","BOPHANs")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Bộ Phận</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","PhongBan")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Phòng Ban</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","DanToc")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Dân Tộc</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","TonGiao")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Tôn giáo</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","CHUCVUs")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Chức Vụ</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","NhanVien")" class="nav-link">
                                        <i class="far fa-circle nav-icon"></i>
                                        <p>Nhân Viên</p>
                                    </a>
                                </li>
                                <li class="nav-item">
