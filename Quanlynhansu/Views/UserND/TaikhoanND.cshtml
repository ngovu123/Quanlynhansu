@model IEnumerable<Quanlynhansu.Models.NGUOIDUNG>

@{
    ViewBag.Title = "TaikhoanND";
    Layout = "~/Views/Shared/Layout_TD.cshtml";
}

@foreach (var item in Model)
{
    
    <section style="background-color: #eee;">
        <div class="container py-5">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card mb-4">
                        <div class="card-body text-center">
                            <img src="~/Image/Admin.png" alt="avatar"
                                 class="rounded-circle img-fluid" style="width: 150px;">
                            <h5 class="my-3">Cài đặt</h5>
                            <div class="form-group">
                                @Html.ActionLink("Đổi mật khẩu", "ChangePassword", new { id = ((Quanlynhansu.Models.NGUOIDUNG)Session["NguoiDung"]).ID }, new { @class = "btn btn-dark w-100" })
                            </div>
                            <div class="form-group">
                                <a href="@Url.Action("Logout","UserND")"><input type="button" value="Logout" class="btn btn-dark w-100" /></a>
                            </div>
                            <div class="d-flex justify-content-center mb-2">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0 font-weight-bold">Họ và tên:</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Html.DisplayFor(modelItem => item.Hoten)</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0 font-weight-bold">Tên người dùng:</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Html.DisplayFor(modelItem => item.TenND)</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0 font-weight-bold">Địa chỉ</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Html.DisplayFor(modelItem => item.Diachi)</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0 font-weight-bold">Email</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Html.DisplayFor(modelItem => item.Email)</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0 font-weight-bold">Số điện thoại:</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0">@Html.DisplayFor(modelItem => item.SDT)</p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-3">
                                    <p class="mb-0 font-weight-bold">Mật khẩu</p>
                                </div>
                                <div class="col-sm-9">
                                    <p class="text-muted mb-0"><input style="border:0px" type="password" value="@item.Pass"/></p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>

}

