
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/Layout_TD.cshtml";
}
<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <img src="~/Image/Admin.png" alt="avatar"
                             class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3">Cài đặt</h5>
                        <div class="form-group">
                            <a href="@Url.Action("TaikhoanND", "UserND",new {id = ((Quanlynhansu.Models.NGUOIDUNG)Session["NguoiDung"]).ID })"><input type="button" value="Back" class="btn btn-dark w-100" /></a>
                        </div>
                        <div class="form-group">
                            <a href="@Url.Action("Logout","UserND")"><input type="button" value="Logout" class="btn btn-dark w-100" /></a>
                        </div>
                        <div class="d-flex justify-content-center mb-2">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <form action="ChangePassword" method="post" name="Login">
                            <div class="row">
                                <div class="col-sm-4">
                                    <p class="mb-0 font-weight-bold">Mật khẩu hiện tại:</p>
                                </div>
                                <div class="col-sm-8">
                                    <p class="text-muted mb-0"><input type="password" name="Pass" id="password_ht" value="@ViewBag.tt" required placeholder="Password"><span>@ViewData["1"]</span></p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-4">
                                    <p class="mb-0 font-weight-bold">Mật khẩu mới:</p>
                                </div>
                                <div class="col-sm-8">
                                    <p class="text-muted mb-0"><input type="password" name="Pass1" id="password1" required placeholder="Password"></p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-sm-4">
                                    <p class="mb-0 font-weight-bold">Xác nhận mật khẩu:</p>
                                </div>
                                <div class="col-sm-8">
                                    <p class="text-muted mb-0"><input type="password" name="Pass2" id="password2" required placeholder="Password"><span>@ViewData["2"]</span></p>
                                </div>
                            </div>
                            <br />
                            <div class="col-4" style="margin-left:30%">
                                <button type="submit" class="btn btn-primary btn-block">Xác nhận</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>