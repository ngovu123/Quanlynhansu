@model Quanlynhansu.Models.QUATRINHCONGTAC

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content">

    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Chi tiết</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="form-group">
                <label for="inputName"> Mã QTCT</label>
                <input type="text" id="inputName" class="form-control" value="@Html.DisplayFor(model => model.MANV)">
            </div>
            <div class="form-group">
                <label for="inputName"> Nhân viên</label>
                <input type="text" id="inputName" class="form-control" value="@Html.DisplayFor(model => model.NHANVIEN.HOTEN)">
            </div>
            <div class="form-group">
                <label for="inputName"> Ngày bắt đầu</label>
                <input type="text" id="inputName" class="form-control" value="@Html.FormatValue(Model.NGAYBD, "{0:dd/MM/yyyy}")">
            </div>
            <div class="form-group">
                <label for="inputName"> Ngày kết thúc</label>
                <input type="text" id="inputName" class="form-control" value="@Html.FormatValue(Model.NGAYKT, "{0:dd/MM/yyyy}")">
            </div>
            <div class="form-group">
                <label for="inputName"> Nơi công tác</label>
                <input type="text" id="inputName" class="form-control" value="@Html.DisplayFor(model => model.NOICT)">
            </div>
            <div class="form-group">
                <label for="inputName"> Chức vụ</label>
                <input type="text" id="inputName" class="form-control" value="@Html.DisplayFor(model => model.CHUCVU)">
            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->


    <div class="row">
        <div class="col-12">
            <a href="@Url.Action("Index","QuaTrinhCongTac")" class="btn btn-secondary">Cancel</a>
        </div>
    </div>
</section>

